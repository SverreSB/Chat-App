<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkBackground"
    tools:context=".ProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/profileTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/topTextProfile"
        android:textAlignment="center"
        android:textColor="@color/staticText"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOpenChangePassword"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp"
        android:text="@string/change_password_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="75dp"
        app:layout_constraintTop_toBottomOf="@+id/profileTopText"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@android:color/white"
        app:strokeColor="@android:color/white"
        app:strokeWidth="3dp"
        android:backgroundTint="@color/staticText"/>

    <Button
        android:id="@+id/buttonSignOut"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="100dp"
        android:text="@string/sign_out_button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="75dp"
        app:layout_constraintTop_toBottomOf="@+id/profileTopText"
        app:layout_constraintBottom_toTopOf="@+id/buttonDeleteAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/staticText"
        app:strokeColor="@color/staticText"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/buttonDeleteAccount"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="400dp"
        android:text="@string/delete_account"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignOut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/staticText"
        app:rippleColor="@color/staticText"
        app:strokeWidth="3dp"
        android:backgroundTint="@color/deleteAccount"/>


</FrameLayout>